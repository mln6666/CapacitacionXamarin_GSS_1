<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="App3.Views.NumbersListView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>

        <StackLayout BackgroundColor="CadetBlue">
            <StackLayout Margin="5,0,5,0" BackgroundColor="Aqua">
                <Label
                    FontAttributes="Bold,Italic"
                    FontSize="Large"
                    HorizontalOptions="Center"
                    Text="Numeritos"
                    TextColor="DarkBlue"
                    TextTransform="Uppercase" />
                <Entry
                    x:Name="entryNumber"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Placeholder="Ingrese un número (Rango: 1 - 25)"
                    PlaceholderColor="Chocolate"
                    Text="5" />
                <Button Clicked="new_ListView_Clicked" Text="Crear Listado" />
            </StackLayout>
            <ScrollView>
                <ListView
                    x:Name="numbersListView"
                    Margin="5,0,5,0"
                    BackgroundColor="Lavender" />

            </ScrollView>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>